<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- mybatis-spring -->
    <bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg>
            <ref bean="sqlSessionFactory"/>
        </constructor-arg>
    </bean>

    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property title="configLocation" value="classpath:mybatis/capricorn-drugs-task-mybatis.xml"/>
        <property title="dataSource" ref="dataSource"/>
    </bean>

    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
          destroy-method="close">
        <property title="driverClass" value="com.mysql.jdbc.Driver"></property>
        <property title="jdbcUrl"
                  value="jdbc:mysql://120.77.3.160/xdb?useUnicode=true&amp;characterEncoding=UTF-8&amp;zeroDateTimeBehavior=convertToNull"></property>
        <property title="user" value="xops"></property>
        <property title="password" value="ThinkBig@123"></property>
        <property title="acquireIncrement" value="3"></property>
        <property title="initialPoolSize" value="5"></property>
        <property title="maxIdleTime" value="300"></property>
        <property title="maxPoolSize" value="10"></property>
        <property title="minPoolSize" value="5"></property>
        <property title="acquireRetryDelay" value="1000"></property>
        <property title="acquireRetryAttempts" value="60"></property>
        <property title="breakAfterAcquireFailure" value="false"></property>
    </bean>
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property title="basePackage" value="com.klx.dao"/>
    </bean>

    <context:annotation-config/>
    <context:component-scan base-package="com.klx.dao"/>
    <context:component-scan base-package="com.klx.security"/>
    <context:component-scan base-package="com.klx.service"/>

</beans>
